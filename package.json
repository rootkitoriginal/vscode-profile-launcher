{
    "name": "vscode-profile-launcher",
    "version": "1.0.0",
    "description": "A VS Code profile launcher built with Electron, TypeScript, and SQLite",
    "main": "dist/main.js",
    "author": "Your Name",
    "license": "MIT",
    "homepage": ".",
    "scripts": {
        "clean": "rm -rf dist build release",
        "build": "npm run clean && tsc",
        "build:watch": "tsc --watch",
        "start": "npm run build && electron .",
        "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
        "pack": "electron-builder",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest tests/unit",
        "test:integration": "jest tests/integration",
        "lint": "eslint src/**/*.{ts,js}",
        "lint:fix": "eslint src/**/*.{ts,js} --fix",
        "format": "prettier --write \"src/**/*.{ts,js,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@jest/globals": "^30.2.0",
        "@types/axios": "^0.9.36",
        "@types/better-sqlite3": "^7.6.8",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "concurrently": "^8.2.2",
        "electron": "^35.7.5",
        "electron-builder": "^24.9.1",
        "eslint-plugin-jest": "^29.0.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "typescript": "^5.3.2",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@octokit/rest": "^22.0.0",
        "axios": "^1.12.2",
        "better-sqlite3": "^9.2.2",
        "dotenv": "^17.2.3",
        "monaco-editor": "^0.53.0",
        "openai": "^6.1.0"
    },
    "build": {
        "appId": "com.example.vscode-profile-launcher",
        "productName": "VS Code Profile Launcher",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "src/renderer/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}

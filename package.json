{
  "name": "vscode-profile-launcher",
  "version": "1.0.0",
  "description": "A VS Code profile launcher built with Electron, TypeScript, and SQLite",
  "main": "dist/main.js",
  "author": "Your Name",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "clean": "rm -rf dist build release",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^17.2.3",
    "monaco-editor": "^0.53.0",
    "openai": "^6.1.0"
  },
  "build": {
    "appId": "com.example.vscode-profile-launcher",
    "productName": "VS Code Profile Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
